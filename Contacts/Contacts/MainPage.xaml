<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MainPage">
    
    <StackLayout Margin="20, 20, 20, 0">                                    <!-- Creating the stack, and setting margins -->
        <Entry Placeholder="Name"/>                                         <!-- "Entry" is for getting user input-->
        <Entry Placeholder="Last Name"/>
        <Entry Placeholder="Email"/>
        <Entry Placeholder="Phone Number"/>
        <Button Text="Save" x:Name="btnSave" Clicked="btnSave_Clicked"/>    <!-- The "Clicked" defines what the button should do
                                                                            when it's clicked. This is in MainPage.xaml.cs -->
    </StackLayout>

</ContentPage>
